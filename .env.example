# Flask 应用配置
SECRET_KEY=your-secret-key-here
FLASK_ENV=development

# MongoDB 数据库配置
MONGO_URI=mongodb://localhost:27017/crypto_db

# API 服务器配置
API_HOST=0.0.0.0
API_PORT=5000

# 爬虫调度配置
# 爬取间隔时间（秒）
SCRAPE_INTERVAL_MIN=600
SCRAPE_INTERVAL_MAX=1800
SCRAPE_INTERVAL=900

# 页面请求延迟配置（秒）
PAGE_DELAY_MIN=2.0
PAGE_DELAY_MAX=5.0

# 请求配置
MAX_RETRIES=3
REQUEST_TIMEOUT=30

# 爬取数据配置
CRYPTO_PER_PAGE=250
MAX_PAGES=20
ENABLE_FULL_SCRAPE=true